@using Atlanta.Domain.Enums
@using Atlanta.Domain.Entity
@model Atlanta.Domain.Entity.Users
@{
    ViewBag.Title = "Edit";
}
<link rel="stylesheet" href="~/css/adminpanel.css" xmlns="http://www.w3.org/1999/html">



@* @using (Html.BeginForm()) *@
